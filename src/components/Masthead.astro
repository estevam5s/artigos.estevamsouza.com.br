---
const isProd = import.meta.env.PROD
const baseAssetUrl = isProd
  ? 'https://craftzdog.global.ssl.fastly.net/uses'
  : ''
---

<section class="relative mb-6 h-80 flex justify-center items-center">
  <div class="absolute w-full h-full overflow-hidden">
    <video
      class="absolute inset-0 min-w-full min-h-full object-cover opacity-30"
      poster="/nest.jpeg"
      autoplay="autoplay"
      muted="muted"
      loop="loop"
      playsinline
      ><source
        src={baseAssetUrl + '/nest.jpeg'}
        type="video/webm; codecs=vp9"
      />
      <source src={baseAssetUrl + '/nest.jpeg'} type="video/mp4; codecs=hvc1" />
    </video>
  </div>
  <div class="z-10 text-center px-8 drop-shadow-lg shadow-black">
    <div class="uppercase text-sm mb-4">Seja muito bem vindo</div>
    <div class="text-4xl font-mplus font-medium">
      Uma lista selecionada de artigos que <span class="text-orange-500"
        >domino</span
      >
    </div>
  </div>
</section>
